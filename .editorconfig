root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[Makefile]
indent_style = tab

[*.{js}]
indent_style = tab
indent_size = 4

[*.{css,scss}]
indent_style = tab
indent_size = 4

[*.{html}]
indent_style = tab
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2